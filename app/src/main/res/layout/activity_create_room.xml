<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F6AF"
    tools:context=".CreateRoom">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:gravity="center_horizontal"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textColor="#024A44"
        android:textSize="50sp"
        app:fontFamily="@font/almendra_bold_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331" />

    <TextView
        android:id="@+id/joinRoomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="Create Room"
        android:textAlignment="center"
        android:textColor="#024A44"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/existingRoomName"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/existingRoomName"
        android:layout_width="283dp"
        android:layout_height="52dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="20dp"
        android:background="#FFF"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="                  Enter Room Name"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/createroomText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joinRoomtext" />

    <Button
        android:id="@+id/createroomText"
        android:layout_width="163dp"
        android:layout_height="39dp"
        android:layout_marginBottom="293dp"
        android:background="#D3EFB3"
        android:text="Create"
        android:onClick="joinExistingRoom"
        android:textColor="#024A44"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/existingRoomName"
        app:layout_constraintStart_toStartOf="@+id/existingRoomName"
        app:layout_constraintTop_toBottomOf="@+id/existingRoomName"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>