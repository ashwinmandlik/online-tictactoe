<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F6AF"
    tools:context=".OnlineMaker">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="400dp"
        android:gravity="center_horizontal"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textColor="#024A44"
        android:textSize="50sp"
        app:fontFamily="@font/almendra_bold_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331" />

    <TextView
        android:id="@+id/createRoom"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="80dp"
        android:background="#D3EFB3"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"
        android:gravity="center_vertical"
        android:onClick="joinroom"
        android:shadowRadius="70"
        android:text="Join Room"
        android:textAlignment="center"
        android:textColor="#024A44"
        android:textSize="22sp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="216dp"
        android:background="#D3EFB3"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"
        android:gravity="center_vertical"
        android:onClick="createroom"
        android:shadowRadius="70"
        android:text="Create Room"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#024A44"
        android:textSize="22sp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createRoom"
        tools:ignore="RtlCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>